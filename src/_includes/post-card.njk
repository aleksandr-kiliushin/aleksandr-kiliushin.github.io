<article>
  <div class="post-tags">
    {% for tag in post.data.tags %}
      <span class="post-tag">{{ tag }}</span>
    {% endfor %}
  </div>
  <h3 class="post-card__title">
    <a href="{{ post.url }}">{{ post.data.title }}</a>
  </h3>
  <p class="post-card__summary">{{ post.data.summary }}</p>
</article>
